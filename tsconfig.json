{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react", // Specify the JSX setting, it can be "react" or "preserve"
    "resolveJsonModule": true,
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/index.js"],
  "exclude": ["node_modules"]
}
